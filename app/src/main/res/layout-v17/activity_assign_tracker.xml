<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:abdroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_assign_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calendarquickstart.assignTracker">

    <Button
    android:text="Start"
        android:textSize = "20dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/start"
    android:onClick = "start"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Pause/Resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pause"
        android:onClick = "start"
        android:layout_marginBottom="52dp"
        android:layout_alignBottom="@+id/end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:onClick = "end"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/returns"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returns"
        android:onClick = "returns"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Press 'Start' to begin the timer"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:id="@+id/tv"
        android:layout_below="@+id/start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />


</RelativeLayout>
